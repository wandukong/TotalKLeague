<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_team"/>

    <ImageView
        android:id="@+id/iv_team"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/busan"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintStart_toEndOf="@id/tv_number"
        app:layout_constraintDimensionRatio="1:1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="상주"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/iv_team"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_number" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="6"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_number">

        <TextView
             android:id="@+id/tv_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="19"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="3"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="3"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="25"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="60"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>